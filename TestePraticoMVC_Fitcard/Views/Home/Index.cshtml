
@{
    ViewBag.Title = "Listagem de Estabelecimento";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div style="margin:0 auto" class="tablecontainer">
    <a class="popup btn btn-primary" href="/Home/Salvar" style="margin-bottom:20px; margin-top:20px;">Cadastrar Estabelecimento</a>
    <table id="tableEstabelecimento" class="full_table_list">
        <thead>
            <tr>
                <th>ID#</th>
                <th>Cadastro</th>
                <th>Categoria</th>
                <th>Razão</th>
                <th>Fantasia</th>
                <th>CNPJ</th>
                <th>E-mail</th>
                <th>Endereço</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>Telefone</th>
                <th>Agência</th>
                <th>Conta</th>
                <th>Status</th>
                <th>Editar</th>
                <th>Deletar</th>
            </tr>
        </thead>
    </table>

    <select id="estado">
        <option value=""></option>
    </select>
    <select id="cidade"></select>
</div>
<script>
    $(function () {
        $('#cod_estados').change(function () {
            if ($(this).val()) {
                $('#cod_cidades').hide();
                $('.carregando').show();
                $.getJSON(
                    'cidades.ajax.php?search=',
                    {
                        cod_estados: $(this).val(),
                        ajax: 'true'
                    }, function (j) {
                        var options = '<option value=""></option>';
                        for (var i = 0; i < j.length; i++) {
                            options += '<option value="' +
                                j[i].cod_cidades + '">' +
                                j[i].nome + '</option>';
                        }
                        $('#cod_cidades').html(options).show();
                        $('.carregando').hide();
                    });
            } else {
                $('#cod_cidades').html(
                    '<option value="">-- Escolha um estado --</option>'
                );
            }
        });
    });
    criarTabela();
</script>
